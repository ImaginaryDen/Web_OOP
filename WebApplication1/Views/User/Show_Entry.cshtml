@model IEnumerable<WebApplication1.Models.Entry>
@{
    ViewData["Title"] = "User's Diary";
}
<!DOCTYPE html>
 
<html>
<head>
    <title>User's Diary</title>

</head>
<body>
    <h3>User's Diary</h3>
    <table>
        <tr>
            <td>Имя</td>
            <td>Описание</td>
            <td>ID</td>
            <td></td>
        </tr>
        @foreach (var user_diary in Model)
        {
	<tr>
		<td>@user_diary.Name</td>
		<td>@user_diary.Description</td>
		<td>@user_diary.ID</td>
		<td>
			<a asp-action=@user_diary.Type asp-route-id="@user_diary.ID">Edit</a> |
			<a asp-action="Delete" asp-route-id="@user_diary.ID">Delete</a>
		</td>
	</tr>
}
    </table>
</body>
</html>
