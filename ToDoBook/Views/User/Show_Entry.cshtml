@{
    ViewData["Title"] = "User's Diary";
}

@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Дневники</title>
    <link rel="stylesheet" href="~/css/show.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-logo">ToDoBook</div>
        <div class="container-logo">
            <img src="image/book.svg" alt="">
        </div>
        <nav class="nav">
            <a class="nav_link" href="Main-2.html">Главная</a>
            <a class="nav_link" href="Profile.html">Профиль</a>
            <a class="nav_link" href="Diary.html">Дневники</a>
            <a class="nav_link" href="Main-2.html">О нас</a>
            <a class="nav_link" href="News.html">Новости</a>
        </nav>
    </header>

    <div class="mainstr">
        <div class="content">
            <div class="zag">Записи</div>
            <table class="table">
                <tr>
                    <td>Имя</td>
                    <td>Описание</td>
                    <td></td>
                </tr>
                @foreach (var user_diary in Model)
                {
                    <tr>
                        <td>Name</td>
                        <td style="width:200px;
									 word-break: break-all">
                            Description
                        </td>
                        <td>
                            <a asp-action=@user_diary.Type asp-route-id="@user_diary.ID" asp-route-id2="@ViewBag.ID" class="Edit" >Изменить</a>
                            <a asp-action="DeleteEntry" asp-route-id="@user_diary.ID" class="Delete" >Удалить</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="footer"><div class="copy">Все права защищены &copy; 2021 ToDoBook</div></div>
    </div>
</body>

</html>






