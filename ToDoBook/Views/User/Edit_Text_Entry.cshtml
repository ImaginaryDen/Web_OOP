@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ToDoBook</title>
    <link rel="stylesheet" href="css/entrytext.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-logo">ToDoBook</div>
        <div class="container-logo">
            <img src="image/book.svg" alt="">
        </div>
        <nav class="nav">
            <a class="nav_link" href="Main-2.html">Главная</a>
            <a class="nav_link" href="Profile.html">Профиль</a>
            <a class="nav_link" href="Diary.html">Дневники</a>
            <a class="nav_link" href="Main-2.html">О нас</a>
            <a class="nav_link" href="News.html">Новости</a>
        </nav>
    </header>

    <div class="mainstr">
        <div class="content">
            <div class="zag">Текстовая запись</div>
            <form class="entrytext" method="post">
                <input type="hidden" value="" name="DiaryId" />
                <input type="hidden" value="" name="Id" />
                <table class="table">
                    <tr>
                        <td>Название:</td>
                        <td><input type="text" placeholder="Название" /></td>

                    </tr>
                    <tr>
                        <td>Описание:</td>
                        <td><input type="text" placeholder="Описание" /></td>

                    </tr>
                    <tr>
                        <td>Заметка:</td>
                        <td><input class="textarea" type="text" placeholder="Текст" /></td>

                    </tr>
                    <tr>
                        <td><input type="submit" value="Отправить" /></td>
                    </tr>
                </table>
            </form>
        </div>
        <div class="footer"><div class="copy">Все права защищены &copy; 2021 ToDoBook</div></div>
    </div>
</body>

</html>







