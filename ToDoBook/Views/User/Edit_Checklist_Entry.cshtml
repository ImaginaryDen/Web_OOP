@model List<ToDoBook.Storage.Entity.Check>

<!DOCTYPE html>

<html>
<head>
	<title>New Diary</title>
</head>
<body>
	<div>
		<h3>Чеклист</h3>
		<form class="List<Check>" method="post">
			<input type="hidden" value="@ViewBag.ID" name="DiaryID" />
			<input type="hidden" value="@ViewBag.Entries.ID" name="ID" />
            <table>
                <tr>
                    <td>Название:</td>
                    <td><input type="text" value="@ViewBag.Entries.Name" name="Name" /> </td>
                </tr>
                <tr>
                    <td>Описание:</td>
                    <td><input type="text" value="@ViewBag.Entries.Description" name="Description" /></td>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td><input type="text" value="@Model[i].Name" asp-for="@Model[i].Name" /> </td>
                        <td>@Html.CheckBoxFor(m => Model[i].State) </td>
                    </tr>
                }
                <tr><td> <input type="submit" value="Добавить чек" name="action" /> </td><td></td></tr>
                <tr><td> <input type="submit" value="Удалить чек" name="action" /> </td><td></td></tr>
                <tr><td> <input type="submit" value="Отправить" name="action" /> </td><td></td></tr>
            </table>
		</form>
	</div>
</body>
</html>
